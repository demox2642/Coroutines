<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/following_element"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/rounded_repository">


    <ImageView
        android:id="@+id/following_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/following_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="@string/user_login"
        app:layout_constraintStart_toEndOf="@+id/following_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/following_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/following_name_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/following_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/user_id"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/following_avatar"
        app:layout_constraintTop_toBottomOf="@+id/following_name_text" />

        <TextView
        android:id="@+id/following_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/following_name_text"
        app:layout_constraintTop_toBottomOf="@+id/following_name" />

    <TextView
        android:id="@+id/following_url_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/url"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/following_avatar"
        app:layout_constraintTop_toBottomOf="@+id/following_id_text" />

    <TextView
        android:id="@+id/following_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/following_name_text"
        app:layout_constraintTop_toBottomOf="@+id/following_id" />

    <TextView
        android:id="@+id/following_repos_url_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/repos_url"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/following_avatar"
        app:layout_constraintTop_toBottomOf="@+id/following_url_text" />

    <TextView
        android:id="@+id/following_repos_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/following_name_text"
        app:layout_constraintTop_toBottomOf="@+id/following_url" />

    <TextView
        android:id="@+id/following_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/type"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/following_avatar"
        app:layout_constraintTop_toBottomOf="@+id/following_repos_url_text" />

    <TextView
        android:id="@+id/following_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/following_name_text"
        app:layout_constraintTop_toBottomOf="@+id/following_repos_url" />
</androidx.constraintlayout.widget.ConstraintLayout>